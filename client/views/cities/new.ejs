<%- include("../partials/header") %>
    
    <div class="container">
        <h3>Add your favourite city</h3>    
        <form action="/city/new" method="POST" enctype="multipart/form-data"><!-- encoding type defined for using file elements -->
            <input type="text" name="city" placeholder="city name" class="form-control mb-2">
            <input type="text" name="country" placeholder="country" class="form-control mb-2">
            <!-- <input type="text" name="image" placeholder="image url" class="form-control mb-2"> -->
            <input type="file" name="images" id="image"><!--include multiple="multiple" for several files -->
            
            <textarea class="form-control" type="text" name="description"></textarea></br>
            <button type="submit" class="btn btn-outline-primary mb-2">Submit</button>
            <a href="/cities" class="btn btn-outline-dark mb-2">Cancel</a>
            
        </form>
    </div>
